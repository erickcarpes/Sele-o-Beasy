generator client {
  provider = "prisma-client-js"
  output   = "./app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Mensagem {
  id        Int      @id @default(autoincrement())
  texto     String
  createdAt DateTime @default(now())
  userRole  UserRole
}

enum UserRole {
  CHAT
  USER
}
