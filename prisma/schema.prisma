generator client {
  provider = "prisma-client-js"
  output   = "./app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Chat {
  id String      @id @default(uuid())
  nome String
  createdAt DateTime @default(now())
  mensagens Mensagem[]
}

model Mensagem {
  id      String      @id @default(uuid())
  texto   String
  createdAt    DateTime @default(now())
  role UserRole
  chat_id String
  chat   Chat   @relation(fields: [chat_id], references: [id])
}

enum UserRole {
  CHAT
  USER
}
